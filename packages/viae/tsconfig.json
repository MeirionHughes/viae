{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "newLine": "LF",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
   
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src/",
    "composite": true,

    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}