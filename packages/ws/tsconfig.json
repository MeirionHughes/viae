{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "newLine": "LF",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src/",
    "composite": true,

    "lib": [
      "es2017",
      "dom",
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules" 
  ]
}